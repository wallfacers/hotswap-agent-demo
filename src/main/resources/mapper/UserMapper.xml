<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wallfacers.hotswapagent.demo.dao.UserMapper">

    <!-- 根据用户ID查询用户 -->
    <select id="selectUserById" parameterType="long" resultType="com.wallfacers.hotswapagent.demo.entity.User">
        SELECT
            id,
            name
        FROM
            tbl_user
        WHERE
            id = 1
    </select>

</mapper>